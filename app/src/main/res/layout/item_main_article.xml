<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="28dp"
            android:orientation="vertical"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/songil_1"
            android:scaleType="centerCrop"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4c000000"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp"
            android:textColor="@color/songil_1"
            android:fontFamily="@font/spoqahansansneo_light"
            android:minLines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="6sp"
            tools:text="SNS 인증샷 명소로 뜬\n한국 최초의 공예전문박물관 SeMoCA"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintBottom_toTopOf="@id/tv_sub_title"
            android:layout_marginBottom="16dp"
            android:textColor="@color/songil_1"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="24sp"
            android:lineSpacingExtra="6sp"
            tools:text="요즘 핫한 바로 거기,\n안국동 서울공예박물관"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_article_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            android:layout_marginBottom="20dp"
            android:background="#cc171717"
            android:textSize="12sp"
            android:padding="8dp"
            android:lines="1"
            android:textColor="@color/songil_1"
            tools:text="매거진"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
