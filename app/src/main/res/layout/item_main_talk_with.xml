<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/songil_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="12sp"
                android:background="@color/songil_1"
                android:fontFamily="@font/montserrat_bold"
                tools:text="QnA"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/songil_1"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="집들이 선물로 어떤게 좋을까요? 엄청 고민하고 있습니다."/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom"
            android:background="@color/songil_1"/>


        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/songil_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bottom_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="12sp"
                android:background="@color/songil_1"
                android:fontFamily="@font/montserrat_bold"
                tools:text="AB TEST"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bottom_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/songil_1"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="도자기 시유 중입니다."/>

        </LinearLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
