<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:background="@color/songil_1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/songil_2"/>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            tools:text="조민지"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quest_about_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_quest_about"
            app:layout_constraintBottom_toBottomOf="@id/tv_quest_about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_quest_about"
            app:layout_constraintHorizontal_chainStyle="packed"
            tools:text="작품"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quest_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_artist"
            app:layout_constraintStart_toEndOf="@id/tv_quest_about_value"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/spoqahansansneo_light"
            android:text="@string/question_about"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quest_about2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_quest_about2"
            app:layout_constraintBottom_toBottomOf="@id/tv_quest_about2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_quest_about2"
            app:layout_constraintHorizontal_chainStyle="packed"
            tools:text="주문 및 포장"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quest_about2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_quest_about"
            app:layout_constraintStart_toEndOf="@id/tv_quest_about2_value"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/spoqahansansneo_light"
            android:text="@string/question_about2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_quest_about2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/spoqahansansneo_light"
            android:text="@string/ask_to_artist_direct"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:includeFontPadding="true"
            android:gravity="center_horizontal"
            android:text="@string/method_check_question"
            android:textColor="@color/g_4"
            android:textSize="12sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
